@model skcyDMSCataloguing.Models.Folder

@{
    ViewData["Title"] = "CreateFromBox";
}

<h3>Create Folder or Batch of Documents Contained in Box : @ViewData["BoxID"]</h3>
<hr />
<br />



<div class="row">
    <br />

    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="BoxID" asp-items="@ViewData["BoxID"]" />

            <div class="form-group">
                <label asp-for="FolderName" class="control-label">Folder's Barcode</label>
                <input asp-for="FolderName" class="form-control" />
                <span asp-validation-for="FolderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustDataCIFNo" class="control-label">CIF Number</label>
                <input asp-for="CustDataCIFNo" class="form-control" />
                <span asp-validation-for="CustDataCIFNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Box" asp-action="Index" asp-route-id="@ViewData["BoxID"]">Back to List</a>
</div>

<hr />
<br />
<br />


<div class="row">
    <div class="col-lg-12">
        <h5 class="alert-heading">Search if CIF is not recognizable in documents</h5>
        <br />
    </div>
    <div class="col-lg-4 d-inline">
        <form asp-action="GetRelatedCif" method="get">
            <input type="hidden" asp-for="BoxID" asp-items="@ViewData["BoxID"]" />
            <div class="form-group">
                <label for="AccountNo" class="control-label">Account No</label><br>
                <input type="text" id="AccountNo" name="AccountNo" value=""><br>
                <input type="submit" value="Submit" class="btn-light" />
            </div>
        </form>
    </div>
    <div class="col-lg-4 d-inline">
        <form asp-action="GetRelatedCif" method="get">
            <input type="hidden" asp-for="BoxID" asp-items="@ViewData["BoxID"]" />
            <div class="form-group">
                <label for="custidn" class="control-label">Customer ID</label><br>
                <input type="text" id="custidn" name="custidn" value=""><br>
                <input type="submit" value="Submit" class="btn-light" />
            </div>
        </form>
    </div>
</div>

<br />
<hr />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
