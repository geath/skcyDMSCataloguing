@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "ListOfRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Of Roles</h1>
<br />

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Administration">Add a new Role</a>

    foreach(var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role ID : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration"
                       asp-route-id="@role.Id">Edit</a>
                    <button type="submit" onclick="return confirm('Are you sure you want to delete Role :@role.Name ?')"
                            class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            There are no Roles 
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Press the Button to Create a Role
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}

