@model IQueryable<Microsoft.AspNetCore.Identity.IdentityUser>

@{ViewBag.Title = "List of All Users";}

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto"
       asp-controller="Account" asp-action="Register">
        AddUser
    </a>
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                UserID : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser"  asp-controller="Administration"  asp-route-id="@user.Id" method="post">
                    <a class="btn btn-primary" asp-action="EditUser"
                       asp-controller="Administration" asp-route-id="@user.Id">Edit</a>
                    <button type="submit" onclick="return confirm('Are you sure you want to delete user :@user.UserName ?')" 
                            class="btn btn-danger">Delete</button>                    
                </form>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            There are no users in the list.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                use the button to create or add a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="Register">
                AddUser
            </a>
        </div>
    </div>

}