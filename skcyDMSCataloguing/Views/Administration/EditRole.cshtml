@model EditRolleViewModel

@{ ViewBag.Title = "Edit Role";}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update Role</button>
            <a asp-action="ListOfRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users assigned to this Role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                     <h5 class="card-title">No user was assigned to the Role yet</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto" asp-action="EditUsersInRole" 
               asp-controller="Administration" asp-route-roleId="@Model.Id">Add or Remove Users</a>            
        </div>
    </div>



</form>